@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyPatientList" as ReadOnlyPatientList
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class PatientList
Class ModelManager
Class UserPrefs

Class UniquePatientList
Class Patient
Class Address
Class Email
Class Name
Class Phone
Class DateOfBirth
Class Sex
Class Appointment
Class UniqueVisitList
Class SexOption
Class Visit

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

PatientList .up.|> ReadOnlyPatientList

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyPatientList
ModelManager -left-> "1" PatientList
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

PatientList *--> "1" UniquePatientList
UniquePatientList --> "~* all" Patient
Patient *--> Name
Patient *--> Phone
Patient *--> Email
Patient *--> Address
Patient *--> DateOfBirth
Patient *--> Sex
Patient *--> Appointment
Patient *--> UniqueVisitList

Sex *--> SexOption
UniqueVisitList --> "~* all" Visit

Patient -[hidden]up--> I
UniquePatientList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Email
Email -[hidden]right-> Address
Address -[hidden]right-> DateOfBirth
DateOfBirth -[hidden]right-> Sex

ModelManager --> "~* filtered" Patient
@enduml
